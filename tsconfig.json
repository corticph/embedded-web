{
  "compilerOptions": {
    "target": "es2021",
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmitOnError": true,
    "lib": ["es2021", "dom", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
